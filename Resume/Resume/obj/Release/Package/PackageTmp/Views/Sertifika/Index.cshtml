@using Resume.Models.Entity
@model List<tblsertifikalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
    string bcolor = "";
    string scolor = "";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">

                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        if (item.id % 2 == 0)
                                        {
                                            bcolor = "bg-success";
                                            scolor = "bg-success";
                                        }
                                        else
                                        {
                                            bcolor = "bg-primary";
                                            scolor = "bg-primary";
                                        }
                                        <div class="time-label">
                                            <a href="/Sertifika/SertifikaGetir/@item.id" class=" btn @bcolor">
                                                <span class="@scolor">
                                                    @item.tarih
                                                </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>

                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.aciklama
                                                </div>

                                            </div>
                                        </div>
                                    }

                                </div>
                                <a href="/Sertifika/SertifikaEkle/" class="btn btn-info">Yeni Sertifika Ekle</a>
                            </div>

                        </div>

                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</body>
</html>


