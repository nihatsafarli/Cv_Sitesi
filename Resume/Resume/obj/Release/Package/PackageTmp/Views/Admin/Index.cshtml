@using Resume.Models.Entity
@model List<tbladmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Kullanıcı Adı</td>
        <td>Düzenle</td>
        <td>Sil</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.kullaniciadi</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Admin/AdminGetir/@item.id">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Admin/AdminSil/@item.id">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/AdminEkle" class="btn btn-success">Yeni Kullanıcı Ekle</a>

