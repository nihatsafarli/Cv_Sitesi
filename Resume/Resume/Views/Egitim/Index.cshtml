@using Resume.Models.Entity
@model List<tblegitimler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Eğitim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Başlık</td>
        <td>Alt Başlık 1</td>
        <td>Alt başlık 2</td>
        <td>GNO</td>
        <td>Tarih</td>
        <td>Düzenle</td>
        <td>Sil</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.baslik</td>
            <td>@item.altbaslik1</td>
            <td>@item.altbaslik2</td>
            <td>@item.gno</td>
            <td>@item.tarih</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Egitim/EgitimGetir/@item.id">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Egitim/EgitimSil/@item.id">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Egitim/EgitimEkle" class="btn btn-success">Yeni Eğitim Bilgisi Ekle</a>